<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Folder select screen -->
    <LinearLayout
        android:id="@+id/folder_select_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_select_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_folder" />

        <Button
            android:id="@+id/btn_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/exit_app" />
    </LinearLayout>

    <!-- Player screen -->
    <FrameLayout
        android:id="@+id/player_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <androidx.media3.ui.PlayerView
            android:id="@+id/player_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:use_controller="false"
            app:show_buffering="when_playing" />

        <View
            android:id="@+id/touch_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Pause toolbar -->
        <LinearLayout
            android:id="@+id/pause_overlay"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="top"
            android:background="#B0000000"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/overlay_filename"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/btn_overlay_info"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/info"
                android:src="@drawable/ic_info"
                android:tooltipText="@string/info" />

            <ImageButton
                android:id="@+id/btn_overlay_select_folder"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/select_folder"
                android:src="@drawable/ic_folder_open"
                android:tooltipText="@string/select_folder" />

            <ImageButton
                android:id="@+id/btn_overlay_exit"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/exit_app"
                android:src="@drawable/ic_close"
                android:tooltipText="@string/exit_app" />
        </LinearLayout>
    </FrameLayout>

</FrameLayout>
